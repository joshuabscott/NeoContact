@model NeoContact.Models.Contact

@{
    ViewData["Title"] = "Create";
}
<h1>CREATE CONTACT</h1>
<div class="p-3 border border-2 shadow-lg bg-light">
    <form asp-action="Create" asp-controller="Contacts" enctype="multipart/form-data">
        <div class="row g-3 p-2">
            
            @*Col1*@
            <div class="col-12 col-lg-4">
                <div class="square-img-container">
                    <img id="contactImage" class="square-img" src="~/img/DefaultContactImage.png">
                </div>
                <div class="mt-2">
                    <input asp-for="formFile" class="form-control" accept=".png,.jpg,.jpeg,.gif" onchange ="document.getElementById('contactImage').src = window.URL.createObjectURL(this.files[0])"/>
                    <span asp-validation-for="formFile" class="text-danger"></span>
                </div>

                <div class="col-12 col-lg-12 d-flex justify-content-center mt-2">
                    <button type="submit" class="btu btn-lg btn-primary rounded-pill">Save</button>
                </div>
            </div>

            @*Col2*@
            <div class="col-12 col-lg-8">
                <div class="row">
                    <div class="col-12 col-lg-6">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-lg-6">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-lg-6 mt-2">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-lg-6 mt-2">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-12 mt-2">
                        <label asp-for="Address1" class="control-label"></label>
                        <input asp-for="Address1" class="form-control" />
                        <span asp-validation-for="Address1" class="text-danger"></span>
                    </div>
                    <div class="col-12 mt-2">
                        <label asp-for="Address2" class="control-label"></label>
                        <input asp-for="Address2" class="form-control" />
                        <span asp-validation-for="Address2" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-lg-6 mt-2">
                        <label asp-for="City" class="control-label"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-lg-4 mt-2">
                        <label asp-for="State" class="control-label"></label>
                        <select asp-for="State" class="form-control" asp-items="ViewBag.StatesList"></select>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-lg-2 mt-2">
                        <label asp-for="Zip" class="control-label"></label>
                        <input asp-for="Zip" class="form-control" />
                        <span asp-validation-for="Zip" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-lg-6 mt-3">
                        <label asp-for="Categories" class="control-label"></label>
                        <select name="CategoryList" class="form-control" asp-items="ViewBag.CategoryList" multiple />
                    </div>
                    <div class="col-12 col-lg-6 mt-3">
                        <label asp-for="Categories" class="control-label"></label>
                        <select name="CategoryList" class="form-control" asp-items="ViewBag.CategoryList" multiple />
                    </div>

                    <div class="col-12 col-lg-6 mt-3">
                        <label asp-for="Date" class="control-label"></label>
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    
                </div>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
